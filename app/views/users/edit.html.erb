<h2>Users Info</h2>
<%= form_with model: @user, url: user_path(@user.id) do |f| %>

 <% if @user.errors.any? %>
  <ul class="alert alert-danger" role="alert">
    <h6 class="alert-heading">
      <%= @user.errors.count %>errors prohibited this obj from being saved:
    </h6>
      <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
 <% end %>

<table>
<tr>
<div class="field">
<label for="user_title">Name</label>
</tr>
<tr>
  <%= f.text_field :name %>
</div>
</tr>

<tr>
<div class="field">
<label for="user_image">Image</label>
</tr>
<tr>
  <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*"%>
</div>
</tr>

<tr>
<div class="field">
<label for="user_body">Introduction</label>
<tr>
<tr>
  <%= f.text_area :body %>
</div>
</tr>
</table>

<div class="field">
  <%= f.submit 'Update User', class:'btn btn-secondary' %>
</div>
<% end %>

