<div class="container">
<div class="row">

<div class="col-md-3">
  <h2>User info</h2>
  <p><%= image_tag current_user.get_profile_image(100,100) %></p>

  <!-- ユーザーの詳細 -->
  <div class="profile-container">

   <h6>name <%= current_user.name %></h6>
	  <h6>introduction</h6>

  <div class="btn btn-outline-secondary btn-block">
  <p><%= link_to edit_user_path(current_user) do %></p>
  　<i class="fas fa-user-cog "></i>
   <% end %>
 </div>

<h2>New Book</h2>

<%= form_with model: @book do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>

 <p>Opinion</p>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' ,class:'nav-link text-light'%>
<% end %>
 </div>
</div>

<div class="col-md-8 offset-md-1">
  	<h2>Users</h2>
  	<table>
    <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
     </tr>
    </thead>

     <tbody>
      <% @users.each do |user| %>
     <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "show", user_path(user.id) %></td>
     </tr>
     <% end %>
     </tbody>

    </table>
