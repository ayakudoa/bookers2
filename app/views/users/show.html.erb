<%= flash[:notice] %>

<div class="container">
<div class="row">

<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="col-md-3">
  <h2>User info</h2>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>

  <!-- ユーザーの詳細 -->
  <div class="profile-container">

   <h6>name <%= @user.name %></h6>
	  <h6>introduction <%= @user.introduction %></h6>

  <div class="btn btn-outline-secondary btn-block">
  <p><%= link_to edit_user_path(@user) do %></p>
  　<i class="fas fa-user-cog "></i>
   <% end %>
 </div>

<h2>New Book</h2>

<%= form_with model: @book do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>

 <p>Opinion</p>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' ,class:'nav-link text-light'%>
<% end %>
 </div>
</div>

 <div class="col-md-8 offset-md-1">
  	<h2>Books</h2>
  	<table>
    <thead>
     <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>

 <tbody>
 <% @books.each do |book| %>
 <tr>
   <td><%= image_tag book.user.get_profile_image(100,100) %></td>

   <td><%= link_to book.title, book_path(book.id) %></td>
   <td><%= book.body %></td>
 </tr>
 <% end %>
</tbody>
</table>

 </div>
 </div>
 </div>