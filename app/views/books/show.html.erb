<%= flash[:notice] %>

<%= render 'books/list', book: @book %>

 <% if @book.errors.any? %>
  <ul class="alert alert-danger" role="alert">
    <h6 class="alert-heading">
      <%= @book.errors.count %>errors prohibited this obj from being saved:
    </h6>
      <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
 <% end %>

<body>
 <div class="col-md-8 offset-md-1">
  	<h2>Book detail</h2>
  	<table>
    <thead>
     <tr>

      <th colspan="3"></th>
     </tr>
    </thead>

 <tbody>
 <tr>
   <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
   <td><%= link_to @book.user.name, user_path(@book.user.id) %></td>
   <td><%= link_to @book.title, book_path(@book.id) %></td>
   <td><%= @book.body %></td>

   <% if user_signed_in? && current_user.id == @book.user_id %>
    <td><%= link_to "Edit", edit_book_path(@book.id), class:'btn btn-sm btn-success' %></td>
   <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" , class:'btn btn-sm btn-danger' %></td>
   <% end %>


 </tr>
</tbody>
</table>
</body>

 </div>
 </div>
